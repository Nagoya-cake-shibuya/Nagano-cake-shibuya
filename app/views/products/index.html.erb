<div class="container">
	<div class="row">
	<!-- ジャンル一覧 -->
		<div class="col-xs-3">
			<table class="table" id = none-border>
				<thead>
					<th>ジャンル検索</th>
				</thead>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.genre_name,genre_search_product_path(genre.id),:style=>"color:black;" %></td>
					</tr>
				<% end %>
			</table>
		</div>
		<!-- 商品一覧 -->
		<div class="col-xs-9">
			<h1>商品一覧</h1>
			<% i = 0 %>
			<table class="table" id="none-border">
				<% @products.each do |product| %>
					<!-- 写真 -->
					<td>
						<%= link_to product_path(product.id) do %>
							<%= attachment_image_tag product, :product_image, :size => '200x150', fallback: "no_image.png"%>
							<br>
							<!-- 商品名-->
							<%= product.product_name %>
								<% if product.is_selling == false %>
									&emsp;<span class="bg-danger">売り切れ</span>
								<% end %>
							<br>
							<!-- 価格-->
							¥<% price = product.unit_price * 1.1 %>
							<%= price.floor.to_s(:delimited) %>
						<% end %>
					</td>
					<!-- 4つ毎に改行 -->
					<% i = i + 1 %>
					<% if i % 4 == 0 %>
						<tr></tr>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>