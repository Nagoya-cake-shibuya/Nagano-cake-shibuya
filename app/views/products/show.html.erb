<div class="container">
	<div class="row">
		<div class="col-xs-3">
		<!--ジャンル検索 -->
			<table>
				<th>ジャンル検索</th>
				<% @genres.each do |genre| %>
					<tr>
						<td>
								<%= genre.genre_name %></td>
					</tr>
				<% end %>
			</table>
		</div>

		<div class="col-xs-1">
		</div>
				<!--商品写真 -->
		<div class="col-xs-4">
			<%= attachment_image_tag @product, :product_image, :fill, 200, 200 %>
		</div>
		<!-- 商品情報 -->
		<div class="col-xs-4">
				<table class="table">
				<thead>
					<tr>
						<th><%= @product.product_name %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @product.product_description %></td>
					</tr>
					<tr>
						<td>¥<% price = @product.unit_price * 1.1 %>
						<%= price.floor %>(税込)</td>
					</tr>
					<tr>
						<td><%= form_for(@product) do |f| %>
							<%= f.submit "カートに入れる",class: "btn btn-primary" %></td>
					</tr>
				</tbody>
			</div>
			<% end %>
		</table>
	</div>
</div>
