<div class="container">
	<div class="row">
		<div class="col-lg-8">
			<h1>マイページ</h1>
			<div class="col-lg-6">
				<table class="table" id="none-border">
					<tr>
						<td>登録情報</td>
						<td><%=link_to "編集する", edit_customers_customer_path, class: 'btn btn-primary btn-sm' %>
						<%=link_to "パスワードを変更する", edit_customer_password_path, class: 'btn btn-primary btn-sm'%></td>
					</tr>
				</table>
				</div>

				<table class="table table-bordered">
				<tr>
					<td>氏名</td>
					<td><%= @customer.family_name%><%= @customer.first_name%></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= @customer.family_name_kana%><%= @customer.first_name_kana%></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @customer.postal_code%></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @customer.address%></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @customer.telephone_number%></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @customer.email%></td>
				</tr>
				</table>
				<div class="col-lg-4">
					<table class="table" id="none-border">
						<tr>
							<td>配送先</td>
							<td><%=link_to "一覧を見る", new_customer_session_path, class: 'btn btn-primary btn-sm'%></td>
						</tr>
						<tr>
							<td>注文履歴</td>
							<td><%=link_to "一覧を見る", new_customer_session_path, class: 'btn btn-primary btn-sm'%></td>
						</tr>
					</table>
				</div>
		</div>
	</div>
</div>

