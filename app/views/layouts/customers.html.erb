<!DOCTYPE html>
<html>
<head>
	<title>NaganoCakeShibuya</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<header class="navbar navbar-fixed-top border border-dark">
		<div class="container">
			<nav class='nav navbar-nav navbar-left' >
				<h3>LOGO</h3>
			</nav>

			<nav>
				<ul class="nav navbar-nav navbar-right">
					<% if customer_signed_in? %>
						<li><%= link_to "マイページ", customers_customer_path(current_customer.id) %></li>
						<li><%= link_to "商品一覧", products_path %></li>
						<li><%= link_to "カート", "#" %></li>
						<li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "商品一覧", products_path %></li>
						<li><%= link_to "新規登録", new_customer_registration_path %></li>
						<li><%= link_to "ログイン", new_customer_session_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</header>
	<br><br><br><br>
	<%= yield %>
</body>
</html>