<div class="container">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<h1>会員一覧画面</h1>
			<div class = "customer-list">
				<table class="table">
					<thead>
						<tr>
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>
					</thead>

					<tbody>
						<% @customers.each do |customer| %>
							<tr>
								<td><%= customer.id %></td>
								<td><%= link_to admins_customer_path(customer.id) do %>
								<%= customer.family_name %>
								<%= customer.first_name %>
								<% end %></td>
								<td><%= customer.email %></td>
								<% if customer.is_acctive == true %>
								<td>有効</td>
								<% else %>
								<td>退会済</td>
								<% end %>
							</tr>
						<% end %>
					</tbody>
				</table>
				<div class="col-md-offset-4">
					<%= paginate(@customers) %>
				</div>
			</div>
		</div>
	</div>
</div>
