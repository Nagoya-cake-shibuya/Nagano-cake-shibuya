
<h1>会員詳細画面</h1>


<table>

<tr>
	<td>顧客ID</td>
	<td><%= @customer.id %>
		<% if @customer.is_acctive == true %>
			<td>有効会員</td>
		<% else %>
			<td>無効会員</td>
		<% end %>
	</td>
</tr>
<tr>
	<td>氏名</td>
	<td><%= @customer.family_name%><%= @customer.first_name%></td>
</tr>
<tr>
	<td>カナ</td>
	<td><%= @customer.family_name_kana%><%= @customer.first_name_kana%></td>
</tr>
<tr>
	<td>郵便番号</td>
	<td><%= @customer.postal_code%></td>
</tr>
<tr>
	<td>住所</td>
	<td><%= @customer.address%></td>
</tr>
<tr>
	<td>電話番号</td>
	<td><%= @customer.telephone_number%></td>
</tr>
<tr>
	<td>メールアドレス</td>
	<td><%= @customer.email%></td>
</tr>
</table>


<tr>
	<td>注文履歴</td>
	<td><%=link_to "一覧を見る", new_customer_session_path%>
</td>
</tr>
<tr>
	<td><%=link_to "編集する", edit_admins_customer_path(@customer.id) %>
</td>
</tr>

</div>

