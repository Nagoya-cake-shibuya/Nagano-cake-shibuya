<div class="container">
	<div class="row">
		<div class="col-lg-8">
			<h1>ジャンル追加・一覧画面</h1>

			<!-- ジャンル作成フォーム -->
			<div class="create-genres">
				<%= form_for @genre, url: admins_genres_path do |f| %>
				<div class="form-inline">
					<div class="form-group">
						<%= f.label :genre_name, "ジャンル" %>
						<%= f.text_field :genre_name, :class => "form-control edit-form" %> &emsp;
					</div>

					<div class= "form-group">
						<%= f.radio_button :flag_active, :true %>
						<%= f.label :flag_active, "有効" %> &emsp;
					</div>

					<div class= "form-group">
						<%= f.radio_button :flag_active, :false %>
						<%= f.label :flag_active, "無効" %> &emsp;
					</div>

					<%= f.submit "追加", class: "btn btn-primary" %>
				</div>
				<% end %>
			</div>

			<br>

			<!-- ジャンル一覧表示 -->
			<div class = "genre-list">
				<table class="table">
					<thead>
						<tr>
							<th>ジャンル</th>
							<th>状態</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.genre_name%></td>
							<%if genre.flag_active == true %>
							<td>有効</td>
							<% else %>
							<td>無効</td>
							<% end %>
							<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<div class="text-center"><%= paginate @genres %></div>
			</div>
		</div>
	</div>
</div>