<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h2>ジャンル編集画面</h2>
      <br>
      <!-- ジャンル編集フォーム -->
      <div class="create-genres">
        <%= form_for @genre, url: admins_genre_path do |f| %>
        <div class="form-inline">
          <div class="form-group">
            <%= f.label :genre_name, " ジャンル" %>
            <%= f.text_field :genre_name, :class => "form-control edit-form" %>&emsp;
          </div>

          <div class= "form-group">
            <%= f.radio_button :flag_active, :true %>
            <%= f.label :flag_active, "有効　" %>&emsp;
          </div>

          <div class= "form-group">
            <%= f.radio_button :flag_active, :false %>
            <%= f.label :flag_active, "無効　" %>&emsp;
          </div>
          <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>