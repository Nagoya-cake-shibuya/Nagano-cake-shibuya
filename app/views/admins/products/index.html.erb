<h1>商品一覧画面</h1>

<div class = "genre-list">
	<table class="table">
		<thead>
			<tr>
				<th>No.</th>
				<th>商品名</th>
				<th>単価</th>
				<th>ジャンル</th>
				<th>販売ステータス</th>

				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
 			<% @products.each do |product| %>
	 			<tr>
		  			<td><%= product.id %></td>
		  			<td><%= link_to admins_product_path(product.id) do %>
		  	  			<%= product.product_name %>
		  	  		<% end %></td>
		  	  		<td><%= product.unit_price %></td>
		  	  		<td><%= product.genre.genre_name %></td>
		  			<% if product.is_selling == true %>
		  				<td> 販売中</td>
		  			<% else %>
		  				<td> 売り切れ</td>
		  			<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
 </div>