<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h1>商品一覧画面</h1>
			<div class = "genre-list">
				<h2>商品一覧画面</h2>
				<table class="table">
					<thead>
						<tr>
							<th>No.</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>販売ステータス</th>

							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
			 			<% @products.each do |product| %>
				 			<tr>
					  			<td><%= product.id %></td>
					  			<td><%= link_to admins_product_path(product.id) do %>
					  	  			<%= product.product_name %>
					  	  		<% end %></td>
					  	  		<td><%= product.unit_price.to_s(:delimited) %></td>
					  	  		<td><%= product.genre.genre_name %></td>
					  			<% if product.is_selling == true %>
					  				<td> 販売中</td>
					  			<% else %>
					  				<td> 販売停止中</td>
					  			<% end %>
							</tr>
						<% end %>
					</tbody>
				</table>
			 </div>
		 </div>
	</div>
</div>

