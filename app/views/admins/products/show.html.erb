<h1>商品詳細画面</h1>
<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<%= attachment_image_tag @product, :product_image, :fill, 300, 200 %>
		</div>

		<div class="col-lg-8">
			<label>商品名</label>
			<%= @product.product_name %><br>

			<label>商品説明</label>
			<%= @product.product_description %><br>

			<label>ジャンル</label>
			<%= @genre.genre_name %>

			<label>税込価格</label>
			<label>(税抜価格)</label>
			<% price = @product.unit_price * 1.1 %>
			<%= price.floor %>
			(<%= @product.unit_price %>)円<br>

			<label>販売ステータス</label>
			<% if @product.is_selling == true %>
			<td>販売中</td>
			<% else %>
			<td>売切</td>
			<% end %><br>

			<%= link_to "編集する", edit_admins_product_path(@product.id) %>
		</div>
	</div>
</div>